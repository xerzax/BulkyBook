@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div  class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
        <br/>
        <br/>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%" id="table">
<thead>
    <tr>
            <th style="color: white">
                Category Name 
            </th>
            <th style="color:white
">
                Display Order
            </th>
            <th>

            </th>

    </tr>
</thead>
<tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%" style="color: white">
                    @obj.Name
                </td>
                <td width="30%" style="color: white">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square">Edit</i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3">Delete</i></a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $("#table").DataTable();
    </script>
}




