@model Book


<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Delete Books
				<hr />
			</h2>
		</div>
		@* <div asp-validation-summary="All"></div>  *@
		<div class="mb-3">
			<label asp-for="BookName"></label>
			<input asp-for="BookName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="AuthorName"></label>
			<input asp-for="AuthorName" disabled class="form-control" />

		</div>
		<div class="mb-3">
			<label asp-for="PublishedDate"></label>
			<input asp-for="PublishedDate" disabled class="form-control" />

		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width: 150px">
			Back To List
		</a>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
