@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Add or Create New Book
            </a>
        </div>
        <br />
        <br />
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%" id="table">
    <thead>
        <tr>
            <th style="color: white">
                Image
            </th>
            <th style="color: white">
                Book Name
            </th>
            <th style="color:white
">
                Author Name
            </th>
            <th style="color:white
">
                Published Date
            </th>
            <th style="color:white">
                Category
            </th>
            
            <th>

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%" style="color: white">
                    <img src="@obj.Image" style="width: 220px; height: 300px;" />

                </td>
                <td width="50%" style="color: white">
                    @obj.BookName
                </td>
                <td width="30%" style="color: white">
                    @obj.AuthorName
                </td>
                <td width="30%" style="color: white">
                    @obj.PublishedDate
                </td>
                 <td width="30%" style="color: white">
                    @obj.Categories?.Name
                </td>  

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square">Edit</i></a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3">Delete</i></a>
                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                         <i class="bi bi-three-dots">Details</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $("#table").DataTable();
    </script>
}



